    body
        span#ping PING
        | &nbsp;
        span#pong PONG
        script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js")
        script(src="//cdnjs.cloudflare.com/ajax/libs/socket.io/0.9.16/socket.io.min.js")
        script
            var socket = io.connect('http://socket-io-server-test.herokuapp.com:80/');
            socket.on('ping', function (data) {
              $("#ping").addClass("on");
              $("#pong").removeClass("on");
              setTimeout(function(){
                socket.emit('pong', { msg: new Date() });
                $("#ping").removeClass("on");
                $("#pong").addClass("on");
              }, 500);
            });
